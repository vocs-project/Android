<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_connexion_appli"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="vocs.com.vocs.ConnexionAppli"
    android:background="@drawable/backgroundconnexion">


    <TextView
        android:text="Vocs"
        android:textColor="#D9D9D9"
        android:textSize="80dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:id="@+id/textView24"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <EditText
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:ems="10"
        android:hint="Password"
        android:background="@drawable/border"
        android:textSize="22dp"
        android:paddingLeft="10dp"
        android:layout_marginTop="31dp"
        android:id="@+id/editpassword"
        android:layout_below="@+id/editlogin"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="CrÃ©er un compte"
        android:background="@drawable/boutonsconnectenregistrer"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:id="@+id/creercompte"
        android:layout_alignBaseline="@+id/seconnecter"
        android:layout_alignBottom="@+id/seconnecter"
        android:layout_toRightOf="@+id/seconnecter"
        android:layout_toEndOf="@+id/seconnecter"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp" />

    <Button
        android:text="Se Connecter"
        android:background="@drawable/boutonsconnectenregistrer"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginTop="69dp"
        android:id="@+id/seconnecter"
        android:layout_below="@+id/editpassword"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="51dp"
        android:layout_marginStart="51dp" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:background="@drawable/border"
        android:ems="10"
        android:id="@+id/editlogin"
        android:layout_marginTop="88dp"
        android:textSize="22dp"
        android:paddingLeft="10dp"
        android:layout_below="@+id/textView24"
        android:layout_alignLeft="@+id/editpassword"
        android:layout_alignStart="@+id/editpassword" />



</RelativeLayout>
