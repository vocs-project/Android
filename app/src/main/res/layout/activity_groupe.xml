<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_groupe"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="vocs.com.vocs.Groupe">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/navigationbar"
        android:id="@+id/imageView3"
        android:adjustViewBounds="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/more"
        android:id="@+id/retourarrieredegroupe"
        android:background="@null"
        android:layout_alignBottom="@+id/imageView3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true" />
    <ImageButton
        android:text="parametres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/parametre"
        android:id="@+id/parametress"
        android:background="@null"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/imageView3" />

    <android.support.design.widget.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/BottomBar"
        app:itemBackground="@android:color/darker_gray"
        app:itemIconTint="@drawable/selectordebar"
        app:itemTextColor="@drawable/selectordebar"
        app:menu="@menu/bottom_navigation_main"
        android:layout_alignParentBottom="true"
        >

    </android.support.design.widget.BottomNavigationView>

    <TextView
        android:text="Nom-prenom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="58dp"
        android:id="@+id/nomprenom"
        android:textColor="@android:color/background_dark"
        android:textSize="20dp"
        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:id="@+id/email"
        android:textColor="@android:color/background_dark"
        android:textSize="20dp"
        android:layout_below="@+id/nomprenom"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="role"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/role"
        android:textColor="@android:color/background_dark"
        android:textSize="20dp"
        android:layout_below="@+id/nblistes"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp" />

    <TextView
        android:text="vous ne possédez pas de classe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/classe"
        android:textColor="@android:color/background_dark"
        android:textSize="20dp"
        android:layout_below="@+id/role"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp" />

    <TextView
        android:text="nblistes"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nblistes"
        android:textColor="@android:color/background_dark"
        android:textSize="20dp"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/email"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Quitter la classe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/intégrerclasse"
        android:id="@+id/quitter"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="intégrer une classe"
        android:layout_width="1000dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:id="@+id/intégrerclasse"
        android:layout_below="@+id/classe"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Classe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/voirclasse" />

    <Button
        android:text="Modifier son Profil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/profil" />


</RelativeLayout>
