<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
   android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:weightSum="1">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/navigationbar"
        android:id="@+id/imageView3"
        android:adjustViewBounds="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Voici vos listes :"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:textSize="28sp"
        android:textColor="@android:color/background_dark"
        android:gravity="center"/>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:layout_weight="1.17"
        android:id="@+id/listView"/>

    <Button
        android:text="Ajouter une liste"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/add" />


    <android.support.design.widget.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/BottomBar"
        app:itemBackground="@android:color/darker_gray"
        app:menu="@menu/bottom_navigation_main"
        android:layout_alignParentBottom="true"
        app:itemIconTint="@drawable/selectordebar"
        app:itemTextColor="@drawable/selectordebar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        >
    </android.support.design.widget.BottomNavigationView>


</LinearLayout>