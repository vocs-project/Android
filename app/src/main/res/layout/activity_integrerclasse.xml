<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_integrerclasse"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="vocs.com.vocs.Integrerclasse">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/navigationbar"
        android:id="@+id/imageView3"
        android:adjustViewBounds="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/more"
        android:id="@+id/retourarrieredegroupe"
        android:background="@null"
        android:layout_alignBottom="@+id/imageView3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true" />
    <ImageButton
        android:text="parametres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/parametre"
        android:id="@+id/parametress"
        android:background="@null"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/imageView3" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="52dp"
        app:srcCompat="@android:drawable/ic_search_category_default"
        android:id="@+id/loupe"
        android:layout_alignBottom="@+id/recherche"
        android:layout_toLeftOf="@+id/retourarrieredegroupe"
        android:layout_toStartOf="@+id/retourarrieredegroupe" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="390dp"
        android:id="@+id/listviewclasses"
        android:layout_below="@+id/recherche"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:inputType="textPersonName"
        android:hint="Recherche"
        android:ems="10"
        android:paddingLeft="10dp"
        android:background="@drawable/border"
        android:layout_marginTop="17dp"
        android:id="@+id/recherche"
        android:layout_below="@+id/imageView3"
        android:layout_toLeftOf="@+id/loupe"
        android:layout_toStartOf="@+id/loupe" />


</RelativeLayout>
